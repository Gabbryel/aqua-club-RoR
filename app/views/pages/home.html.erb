<!-- desktop -->
<div class="container-fluid desktop position-relative blue">
  <div class="row mt-md-2 mt-xl-0 home-master justify-content-around align-items-center">
    <!-- video div -->
    <div class="col-12 col-sm-11 col-xl-4 mb-md-5  video-div p-0 d-flex justify-content-center home-div rounded-border">
      <%= cl_video_tag("aqua_drzusw",
          id: 'home-video',
          class: 'rounded-border',
          autoplay: true,
          loop: true,
          muted: true
      ) %>
      
    </div>
    <!-- news div -->
    <div class="col-12 col-sm-5 col-xl-3 home-div mb-md-5 bck-yellow">
      <h1 class='font text-center blue font-weight mt-4 mb-3 news-div'><i class="fas fa-newspaper mr-3"></i>News</h1>
      <div class="articles scroll bck-yellow p-0 round-border">
          <% @articles.each do |a| %>
          <div class="article font bck-blue yellow round-border my-3">
            <p class='pt-3 px-3'><%= a.body %></p>
            <hr class='bck-yellow m-0'>
            <p class='pl-3 pb-2 m-0'><%= a.created_at.to_s.split(' ').first.split('-').reverse().join('-') %></p>
            <% if current_user %>
              <div class="news-edit">
                <%= link_to 'edit', edit_article_path(a) %>
                <%= link_to 'del', article_path(a), method: :delete %>
              </div>
            <% end %>
          </div>
          <% end %>
          <%= link_to 'üëâarticole mai vechi', articles_path, class: 'text-center font d-block text-center' %>
      </div>
    </div>
   <!-- nav div -->
    <div class="col-12 col-sm-5 col-xl-4 d-flex flex-column mb-md-5 justify-content-sm-between home-3rd-div p-0">
        <p class='font text-center blue font-weight mb-3 about' data-toggle="modal" data-target="#about"><i class="fas fa-info-circle mr-3"></i> Despre noi</p>
        <p class='font text-center blue font-weight mb-3 rules' data-toggle="modal" data-target="#rules"><i class="fas fa-swimming-pool mr-3"></i> Regulament</p>
        <p class='font text-center blue font-weight mb-3 prices' data-toggle="modal" data-target="#prices"><i class="fas fa-coins mr-3"></i> Pre»õuri</p>
      </div>
    </div>
  </div>
</div>


<!-- mobile -->
<div class="container-fluid mobile mb-5">
  <div class="row justify-content-center py-5 my-5">
    <div class="col-10 mt-5 home-video-mobile round-border">
      <%= cl_video_tag("aqua_drzusw",
          id: 'home-video',
          class: 'round-border',
          autoplay: true,
          loop: true,
          muted: true,
          playsinline: true,
      ) %>
    </div>
    <div class="col-10 home-news-mobile mt-5 bck-yellow">
      <h1 class='font text-center blue font-weight mt-4 mb-3 news-div'><i class="fas fa-newspaper mr-3"></i>News</h1>
      <div class="d-flex flex-column articles round-border scroll">
      <% @articles.each do |a| %>
          <div class="article font bck-blue yellow round-border mt-4">
            <p class='px-3 pb-3'><%= a.body %></p>
            <hr class='bck-yellow m-0'>
            <p class='pl-3 pb-2 m-0'>Publicat: <%= a.created_at.to_s.split(' ').first.split('-').reverse().join('-') %></p>
            <% if current_user %>
              <div class="news-edit">
                <%= link_to 'edit', edit_article_path(a) %>
                <%= link_to 'del', article_path(a), method: :delete %>
              </div>
            <% end %>
          </div>
      <% end %>
          <%= link_to 'üëâarticole mai vechi', articles_path, class: 'text-center btn btn-lg font d-block text-center pb-3' %>
      </div>
    </div>
    <div class="col-10 home-prices-mobile d-flex align-items-center mt-5 bck-yellow">
      <p class='font text-left my-4 blue font-weight mb-3 pl-3' data-toggle="modal" data-target="#prices"><i class="fas fa-coins mr-3"> </i> Pre»õuri</p>
    </div>
    <div class="col-10 home-rules-mobile d-flex align-items-center mt-5 bck-yellow">
      <p class='font text-left my-4 blue font-weight mb-3 pl-3'><i class="fas fa-swimming-pool mr-3"></i> Regulament</p>
    </div>
    <div class="col-10 home-about-mobile d-flex align-items-center my-5 bck-yellow">
      <p class='font text-left my-4 blue font-weight mb-3 pl-3'><i class="fas fa-info-circle mr-3"></i> Prezentare</p>
    </div>
  </div>
</div>