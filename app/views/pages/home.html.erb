<div class="container-fluid desktop blue">
  <div class="row home-master justify-content-around align-items-center">
    <div class="col-12 col-lg-4 home-div p-0 d-flex justify-content-center">
      <%= video_tag(
        'aqua.mp4',
        id: 'home-video',
        autoplay: true,
        loop: true,
        muted: true,
        poster: 'aqua.jpg'
      ) %>
    </div>
    <div class="col-12 col-lg-3 home-div">
      <div class="d-flex mt-3 align-items-center justify-content-center">
        <div><i class="fas fa-newspaper mr-3"></i> </div>
        <div><p class="font home-div_first-letter font-weight">a</p></div>
        <div><p class="font home-div_word font-weight">nunțuri</p></div>
      </div>
    </div>
    <div class="col-12 col-lg-3 d-flex flex-column justify-content-between home-3rd-div">
      <%= link_to '#', class: 'about' do %>
      <div class="d-flex mt-3 align-items-center justify-content-center blue">
        <div><i class="fas fa-question-circle mr-3"></i></div>
        <div><p class="font home-div_first-letter font-weight">d</p></div>
        <div><p class="font home-div_word font-weight">espre</p></div>
        <div><p class="font home-div_first-letter font-weight">n</p></div>
        <div><p class="font home-div_word font-weight">oi</p></div>
      </div>
      <% end %>
      <%= link_to '#', class: 'rules' do %>
        <div class="d-flex mt-3 align-items-center justify-content-center blue">
        <div><i class="fas fa-swimming-pool mr-3"></i></div>
        <div><p class="font home-div_first-letter font-weight">r</p></div>
        <div><p class="font home-div_word font-weight">egulament</p></div>
      </div>
      <% end %>
      <%= link_to '#', class: 'prices' do %>
        <div class="d-flex mt-3 align-items-center blue">
        <div><i class="fas fa-coins mr-3"></i></div>
        <div><p class="font home-div_first-letter font-weight">p</p></div>
        <div><p class="font home-div_word font-weight">rețuri</p></div>
      </div>
      <% end %>
    </div>
  </div>
</div>